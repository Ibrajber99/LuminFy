@model Me_Spotify_App.ViewModels.BrowseViewModel
@using Me_Spotify_App.Models.Browse_Related

@Html.BeginForm("GetSearchedValues", "Browse"){


@Html.HiddenFor(Model => Model.AuthModel.TokenTimeGeneration)
@Html.HiddenFor(Model => Model.AuthModel.TokenGiven)

<div class="card text-white bg-dark mb-3" style="padding-left: 1em; padding-right: 1em;padding-top:1em;">
    <div class="form-group">
        @Html.LabelFor(modelItem => Model.SearchModel.Query) :
        @Html.EditorFor(modelItem => Model.SearchModel.Query,
       new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(modelItem => Model.SearchModel.Query, "", new { @class = "text-danger" })

    </div>
    <div class="row">
        @foreach (var searchTypes in Model.SearchModel.TypesList)
        {
            <div class="col-4">
                @Html.LabelFor(model => model.SearchModel.Type, searchTypes.ToString())
                @Html.RadioButtonFor(model => model.SearchModel.Type, searchTypes)
            </div>
        }
    </div>
    <input type="submit" class="btn btn-outline-success" value="Search" />
    <br />
</div>
}




